<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/layout_rotation_buttons"
              android:layout_width="fill_parent"
              android:layout_height="60dp"
              android:orientation="horizontal"
              android:paddingLeft="0dp"
              android:paddingRight="2dp"
              android:weightSum="3">

    <ImageButton
        android:id="@+id/rotation_btn_angle"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:paddingLeft="0dp"
        android:paddingRight="10dp"
        android:background="@color/custom_background_color"
        android:src="@drawable/icon_menu_strokes"/>

    <ImageButton
        android:id="@+id/rotation_btn_left"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:background="@color/custom_background_color"
        android:src="@drawable/icon_menu_undo"/>

    <ImageButton
        android:id="@+id/rotation_btn_right"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:background="@color/custom_background_color"
        android:src="@drawable/icon_menu_redo"/>

</LinearLayout>
